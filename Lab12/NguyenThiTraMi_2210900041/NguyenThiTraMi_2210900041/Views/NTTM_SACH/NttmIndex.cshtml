@model IEnumerable<NguyenThiTraMi_2210900041.Models.NTTM_SACH>

@{
    ViewBag.Title = "Danh sách Sách";
    Layout = "~/Views/Shared/_NttmLayout.cshtml";
}

<h2>Index</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<a href="NTTM_SACH/NttmCreate" class="btn btn-primary my-3">Thêm Mới</a>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nttm_MaSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nttm_TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nttm_SoTrang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nttm_NamXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nttm_TrangThai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NTTM_TACGIA.Nttm_TenTacGia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nttm_MaSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nttm_TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nttm_SoTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nttm_NamXB)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Nttm_TrangThai)*@
                @if (item.Nttm_TrangThai == true)
                {
                    <span style="color: green">Hoạt động</span>
                }
                else
                {
                    <span style="color: red">Không Hoạt động</span>

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NTTM_TACGIA.Nttm_TenTacGia)
            </td>
            <td>
                @Html.ActionLink("Nttm: Edit", "NttmEdit", new { id = item.Nttm_MaSach.Trim() }, new { @class = "btn btn-success my-3" }) |
                @Html.ActionLink("Nttm: Details", "NttmDetails", new { id = item.Nttm_MaSach.Trim() }, new { @class = "btn btn-info my-3" }) |
                @Html.ActionLink("Nttm: Delete", "NttmDelete", new { id = item.Nttm_MaSach.Trim() }, new { @class = "btn btn-danger my-3" })
            </td>
        </tr>
    }

</table>
